
<div class=" flex flex-col items-center w-80  gap-8  m-auto rounded-md bg-zinc-300 pb-10 pt-6">
<h1 class="text-4xl text-blue-500 font-bold">Sign in</h1>

<%= form_with session:, url: sign_in_path do |form| %>
<div class="flex flex-col ">
   
<div class="flex flex-col ">
<lable for='name'>Email</lable>
<%= form.email_field :email, placeholder:" Email", 
class:"peer border border-slate-400  rounded-md bg-white  "   %>
    <p class="invisible peer-invalid:visible text-red-700 font-light"> Please enter a valid email address</p>
</div>
<div class="flex flex-col">
<lable for='name'>Password</lable>
<%= form.password_field :password , placeholder:"Password",
 class:"peer border border-slate-400  rounded-md bg-white "   %>
    <p class="invisible peer-invalid:visible text-red-700 font-light"> Please enter valid password</p>
</div>
<div class="flex flex-col">
<%= form.submit "Sign in", class:" w-full p-2 text-white font-bold cursor-pointer bg-blue-500 rounded-md" %>
</div>


<div class="flex flex-col items-end"> 

<%= link_to 'Sign Up',signup_path, class: "p-1   text-blue-500 font-bold  cursor-pointer rounded-md" %>

</div>
</div>
<% end %>
</div>