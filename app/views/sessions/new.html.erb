
<div class=" flex flex-col items-center w-80  gap-14  m-auto rounded-md bg-zinc-300 pb-10 pt-6">
<h1 class="text-4xl text-blue-500 font-bold">Sign in</h1>

<%= form_with session:, url: sign_in_path do |form| %>
<div class="flex flex-col gap-1  ">
   
<div class="mb-3">
<%= form.email_field :email, class:"form-input px-8", placeholder:" Email", 
class:"rounded-md bg-white  border-inherit"  %>
</div>
<div class="mb-3">
<%= form.password_field :password,class:"form-input px-8",placeholder:"Password",
 class:"rounded-md bg-white border-inherit"   %>

</div>
<div class="">
<%= form.submit "Sign in", class:" w-full p-2 text-white font-bold cursor-pointer bg-blue-500 rounded-md" %>
</div>


<div class="flex flex-col items-end"> 

<%= link_to 'Sign Up',signup_path, class: "p-1   text-blue-500 font-bold  cursor-pointer rounded-md" %>

</div>
</div>
<% end %>
</div>