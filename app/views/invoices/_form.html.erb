

<%= form_with model: @invoice    do |invoice| %>
    <div class="flex flex-col m-auto  gap-3 w-[60%]   ">
      <div class="flex flex-col ">
        <lable for='name'>Customer Name</lable>
        <%= invoice.select  :customer_id,  Customer.pluck(:full_name, :id)  ,
        class:"peer border border-slate-400  rounded-md bg-white " %>   
             
   </div>

    <div class="flex flex-col ">
        <lable for='name'>Date</lable>
        <%= invoice.date_field :date, autofocus: true,
        class:"peer border border-slate-400  rounded-md bg-white  "   %>  
                 
   </div>
    
   <div class="flex  justify-between ">
     <div class="flex">
      <%= invoice.submit   class:" w-30 p-2  text-white font-bold cursor-pointer bg-blue-500 rounded-md" %>
     </div>

     <div class='flex'>
     <%= link_to "Back",invoices_path, class:" w-20 p-2  text-white text-center font-bold cursor-pointer bg-slate-600 rounded-md" %>
     </div>

    </div>
   </div>
<% end %>

