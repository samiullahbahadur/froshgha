

<div class=" flex flex-col w-[80%] gap-4  m-auto rounded-md  pt-6 relative overflow-x-auto bg-zinc-300  ">

<div class="flex justify-between">
     <div class="flex px-4 ">
      <h1 class=" flex  text-2xl   font-bold">Customers Lists</h1>
      </div>

      <div class="flex ml-20 ">
          <%= form_with( url: customers_path, remote: true,  method:  :get )  do %>
          <%= text_field_tag :search, params[:search], placeholder:"Search", class:' w-1/2  ml-20 rounded-md' %>
          <%= submit_tag("Search", :class=>"cursor-pointer font-bold cursor-pointer p-2 bg-lime-700 rounded-md ")  %>
          <% end %>
      </div>
      
</div>

<div class="flex flex-col items-end  mr-14">
<%= link_to 'Add New ',new_customer_path,class:" w-15 p-2 text-white font-bold cursor-pointer bg-cyan-600 rounded-md" %>
</div>
  <table class=" w-[96%] m-auto text-sm text-gray-500 dark:text-gray-400 text-center ">
    <thead class="text-lg text-gray-700   dark:bg-gray-700 dark:text-gray-400  border-b" >
      <tr>
      <th>  Name</th>
      <th> Address</th>
      <th> Phone</th>
      <th> Edit</th>
      <th> Delete</th>
   
      
     
      </tr>
    </thead >
    <tbody>
  
        <% @customer.each do |customer|%>
 
        <tr class="border-b">
            <td> <%=customer.full_name %> </td>
            <td> <%=  customer.address %></td>
            <td> <%=  customer.phone %> </td>
            <td>
            <%= link_to 'Edit', edit_customer_path(customer), class:" p-2 text-white font-bold cursor-pointer bg-lime-600 rounded-md"  %></td>
            <td>
       
          <%= button_to 'Remove', customer_path(customer), method: :delete, class:"  p-2 text-white font-bold cursor-pointer bg-red-500 rounded-md" %>
       
          </td>
        </tr>
       
      <%end%> 
      
    </tbody>                  
  </table>
 

  <%= paginate  @customer %>
  </div>
