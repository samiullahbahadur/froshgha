
<%= form_with model: @current_price    do |c_price| %>
   
    <div class="flex flex-col m-auto  gap-3 w-[50%]   ">
      <div class="flex flex-col ">
        <lable for='name'>Product Details</lable>
        <%= c_price.select  :product_id,  Product.pluck(:product_details, :id), required: true,
        class:"peer border border-slate-400  rounded-md bg-white  "   %>        
     </div>

     <div class="flex flex-col ">
        <lable for='name'>Current Price</lable>
        <%= c_price.number_field  :price,  autofocus:true, step: :any,  placeholder:"Enter price", required: true,
        class:"peer border border-slate-400  rounded-md bg-white " %>  
   </div>
    
   <div class="flex  justify-between ">
     <div class="flex">
      <%= c_price.submit   class:" w-42 p-2  text-white font-bold cursor-pointer bg-blue-500 rounded-md" %>
     </div>

     <div class='flex'>
     <%= link_to "Back",current_prices_path, class:"   w-20 p-2  text-white text-center font-bold cursor-pointer bg-slate-600 rounded-md" %>
     </div>
    </div>
   </div>
<% end %>

