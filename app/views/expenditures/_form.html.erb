

<%= form_with model: @expenditure  do |exp| %>
    <div class="flex flex-col m-auto  gap-3 w-[60%]   ">
      <div class="flex flex-col ">
        <lable for='name'>Description</lable>
        <%=exp.text_area  :description,  autofocus:true,  cols: 30, rows: 2,  placeholder:"Expenditure Details" ,
        class:"peer border border-slate-400  rounded-md bg-white " %>      
   </div>

    <div class="flex flex-col ">
        <lable for='name'>Amount</lable>
        <%=exp.number_field  :amount,  autofocus:true, step: :any,  placeholder:"Enter amount",
        class:"peer border border-slate-400  rounded-md bg-white  "   %>       
   </div>
    <div class="flex flex-col ">
        <lable for='name'>Date</lable>
        <%=exp.date_field  :date,  autofocus:true,
        class:"peer border border-slate-400  rounded-md bg-white  "   %>       
   </div>
    
   <div class="flex  justify-between ">
     <div class="flex">
      <%= exp.submit  "Save", class:" w-20 p-2  text-white font-bold cursor-pointer bg-blue-500 rounded-md" %>
     </div>

     <div class='flex'>
     <%= link_to "Back",expenditures_path, class:" w-20 p-2  text-white text-center font-bold cursor-pointer bg-slate-600 rounded-md" %>
     </div>

    </div>
   </div>
<% end %>

