




<div class=" flex flex-col items-center w-80  gap-8  m-auto rounded-md bg-zinc-300 pb-10 pt-6">
<h1 class="text-4xl text-blue-500 font-bold">Sign Up </h1>

<%= form_with model:  @user   do |f| %>

<% if @user.errors.any? %>
<div class="alert alert-danger">
<% @user.errors.full_messages.each do |message| %>
    <div > <%= message %></div>
 <% end %>
</div>
<% end %>

<div class="flex flex-col gap-2 ">
<div class="flex flex-col ">
<lable for='name'>Name</lable>
<div class="flex flex-col">
<%= f.text_field :fullname , placeholder:"Full Name", 
class:" peer border border-slate-400 rounded-md bg-white "  %>
</div>
<div class="flex flex-col ">
<lable for='name'>Email</lable>
<%= f.email_field :email, placeholder:" Email", 
class:"peer border border-slate-400  rounded-md bg-white "   %>
    
</div>
<div class="flex flex-col">
<lable for='name'>Password</lable>
<%= f.password_field :password , placeholder:"Password",
 class:"peer border border-slate-400  rounded-md bg-white "   %>
    
</div>


<div class="flex flex-col gap-3 ">
<%= f.submit "Sign in", class:" w-full p-2 text-white font-bold cursor-pointer bg-blue-500 rounded-md" %>
</div>


<div class="flex flex-col items-end"> 

<%= link_to 'Sign In',sign_in_path, class: "p-1   text-blue-500 font-bold  cursor-pointer rounded-md" %>

</div>
</div>
<% end %>
</div>