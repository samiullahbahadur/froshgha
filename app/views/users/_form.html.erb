



    
<div class=" flex flex-col items-center w-80  gap-14 m-auto rounded-md bg-zinc-300 pb-10 pt-4">
<h1 class="text-4xl text-blue-500 font-bold">Sign Up</h1>

<%= form_with model:  @user   do |f| %>

    <% if @user.errors.any? %>
    <div class="alert alert-danger">
    <% @user.errors.full_messages.each do |message| %>
        <div > <%= message %></div>
     <% end %>
    </div>
    <% end %>
<div class="flex flex-col gap-1 w-full">
   
<div class="mb-3">
<%= f.text_field :fullname , class:"form-input", placeholder:"Full Name", 
class:"rounded-md bg-white  border-inherit"  %>
</div>
<div class="mb-3">
<%= f.email_field :email, class:"form-input", placeholder:" Email", 
class:"rounded-md bg-white  border-inherit"  %>
</div>
<div class="mb-3">
<%= f.password_field :password,class:"form-input",placeholder:" Password",
 class:"rounded-md bg-white border-inherit"   %>

</div>
<div class="">
<%= f.submit "Sign Up", class:" w-full p-2 text-white font-bold cursor-pointer bg-blue-500 rounded-md" %>
</div>


<div class="flex flex-col items-end"> 

<%= link_to 'Sign In',sign_in_path, class: "p-1   text-blue-500 font-bold  cursor-pointer rounded-md" %>

</div>
</div>
<% end %>
</div>