

<%= form_with model: @bejak    do |bejak| %>
    <div class="flex flex-col m-auto  gap-3 w-[60%]   ">
      <div class="flex flex-col ">
        <lable for='name'>Bejak Details</lable>
        <%=bejak.text_area :details, autofocus: true,cols: 50, rows: 3,   placeholder:"Bejak details"  ,
        class:"peer border border-slate-400  rounded-md bg-white " %>      
   </div>

    <div class="flex flex-col ">
        <lable for='name'>Date</lable>
        <%= bejak.date_field :date, autofocus: true,
        class:"peer border border-slate-400  rounded-md bg-white  "   %>       
   </div>
    
   <div class="flex  justify-between ">
     <div class="flex">
      <%= bejak.submit   class:" w-40 p-2  text-white font-bold cursor-pointer bg-blue-500 rounded-md" %>
     </div>

     <div class='flex'>
     <%= link_to "Back",bejaks_path, class:" w-40 p-2  text-white text-center font-bold cursor-pointer bg-slate-600 rounded-md" %>
     </div>

    </div>
   </div>
<% end %>

