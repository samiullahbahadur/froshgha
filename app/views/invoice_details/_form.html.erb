

<%= form_with model: @invoice_details,  url: invoice_details_path  do |ind| %>

    <div class="flex flex-col m-auto  gap-3 w-[60%] ">
      <div class="flex flex-col ">
        <lable for='name'>â€Œ Product Name </lable>
        <%=ind.select  :product_id,  Product.pluck(:product_details, :id)  ,
        class:"peer border border-slate-400  rounded-md bg-white " %>     
     </div>

    <div class="flex flex-col" >
        <lable for='name'>Unit</lable>
        <%=  ind.text_field :unit, autofocus: true,   placeholder:"Unit", :required=> true,
        class:"peer border border-slate-400  rounded-md bg-white " %>  
   </div>

    <div class="flex flex-col ">
        <lable for='name'>Quantity</lable>
        <%=ind.number_field :quantity, autofocus: true, :required=> true,  placeholder:"Quantity" ,
        class:"peer border border-slate-400  rounded-md bg-white " %>          
    </div>

    <div class="flex flex-col ">
        <lable for='name'>Unit Price</lable>
        <%=  ind.number_field :unit_price, autofocus: true, step: :any, :required=> true, placeholder:"Unit Price",
        class:"peer border border-slate-400  rounded-md bg-white " %>          
    </div>

    <div class="flex flex-col ">
        <lable for='name'>Discount</lable>
        <%= ind.number_field :discount, autofocus: true, step: :any, :required=> true, placeholder:"Discount",
        class:"peer border border-slate-400  rounded-md bg-white " %>          
    </div>
    
   <div class="flex  justify-between ">
     <div class="flex">
      <%= ind.submit "Save",  class:" w-20 p-2  text-white font-bold cursor-pointer bg-blue-500 rounded-md" %>
     </div>

     <div class='flex'>
     <%= link_to "Back",invoice_details_path, class:" w-20 p-2  text-white text-center font-bold cursor-pointer bg-slate-600 rounded-md" %>
     </div>

    </div>
   </div>
<% end %>

